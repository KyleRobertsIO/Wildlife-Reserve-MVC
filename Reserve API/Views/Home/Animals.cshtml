
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="stylesheet" type="text/css" href="~/Content/css/reset.css">
	<link rel="stylesheet" type="text/css" href="~/Content/css/main.css">
	<link rel="stylesheet" type="text/css" href="~/Content/css/navigation.css">
	<link rel="stylesheet" type="text/css" href="~/Content/css/animals.css">
	<link rel="stylesheet" type="text/css" href="~/Scripts/swiper-js/swiper.min.css">
	<link rel="stylesheet" type="text/css" href="~/Content/css/animalsDetails.css">
	<title>Reserve - @ViewBag.Title</title>
</head>
<body>
	@{
		Html.RenderPartial("Main_Navigation_Bar");
	}

	<div id="page-container">

		<div id="animal-card-list-container">
			<ul id="animal-card-list">
				<template id="animal-card-template">
                    <li class="card-flex">
                        <div class="animal-card-container" onclick="displayAnimalPage(this.id)">
                            <img class="card-image" src="" alt="" />
                            <div class="animal-card-info-container">
                                <h2 class="animal-card-species"></h2>
                                <p class="animal-card-desc"></p>
                            </div>
                        </div>
                        <a class="edit-button-link" href="">
                            <button class="edit-animal-button">
                                <img class="edit-button-icon" src="~/Content/assets/icons/edit.svg" alt="Edit" />
                                Edit
                            </button>
                        </a>
                    </li>
				</template>
			</ul>
		</div>

		<div id="animal-details-page">
			<button id="close-details-button" onclick="closeDetails()">
				<img id="close-details-icon" src="~/Content/assets/icons/close.svg" />
			</button>
			<div class="swiper-container">
				<div id="image-roll" class="swiper-wrapper">
				</div>
				<div class="swiper-pagination"></div>
			</div>

			<div id="animal-details-wrapper">
				<h1 id="detail-animal-species"></h1>
				<p id="detail-animal-description"></p>

				<div id="detail-stats-wrapper">
					<div id="population-tag">
						<img class="detail-tag-icon" src="~/Content/assets/icons/chart.svg" alt="Population" />
						<h3 id="detail-animal-population"></h3>
					</div>
					<div id="breeding-season-tag">
						<img class="detail-tag-icon" src="~/Content/assets/icons/heart.svg" alt="Breeding Season" />
						<h3 id="detail-animal-breeding-season"></h3>
					</div>
				</div>

			</div>

		</div>

	</div>

    <script>
        var sessionUsername = '@Session["Username"]';
    </script>
	<script src="~/Scripts/swiper-js/swiper.min.js"></script>
	<script src="~/Content/js/animals_request.js"></script>

</body>
</html>
